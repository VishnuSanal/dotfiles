#!/bin/bash

id=$(bluetoothctl devices | rofi -p 'Select: ' -dmenu | awk '{print $2}')

printf "Connect or disconnect"
[ -z "$id" ] && exit 1
case "$(printf "Connect\nDisconnect\n" | rofi -p 'Action: ' -dmenu)" in
	'Disconnect') bluetoothctl disconnect $id && notify-send "â­• Disconnected Succesfully" ;;
	'Connect') bluetoothctl connect $id && notify-send "ðŸŽ§ Connected Succesfully";;
esac
