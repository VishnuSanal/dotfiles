#!/bin/bash

mkdir ~/.config/polybar/backup/

cp ~/.config/polybar/config.ini ~/.config/polybar/backup/config.ini
cp ~/.config/polybar/colors.ini ~/.config/polybar/backup/colors.ini
cp ~/.config/polybar/modules.ini ~/.config/polybar/backup/modules.ini
cp ~/.config/polybar/launch.sh ~/.config/polybar/backup/launch.sh

vim ~/.config/polybar/config.ini
